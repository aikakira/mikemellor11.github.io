{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"definitions": {
		"attributes": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"title": {"type": "string"},
				"googleTrackingID": {"type": ["string", "null"]},
				"external": {
		        	"$ref": "deploy.json#/definitions/deploy"
				},
				"internal": {
		        	"$ref": "deploy.json#/definitions/deploy"
				},
                "autoEmail": {
                	"type": "array",
		            "items": {
		            	"type": "object",
						"properties": {
							"email": {"type": "string"},
							"name": {"type": "string"}
						}
		            }
            	},
            	"autoPackage": {
            		"type": "object",
            		"properties": {
						"url": {"type": "string"},
						"ftp": {"type": "string"}
					},
					"required": ["url", "ftp"]
				},
				"local": {
					"type": "object",
            		"properties": {
						"url": {"type": "string"}
					},
					"required": ["url"]
				},
				"content": {
					"type": "object",
            		"properties": {
						"ftp": {"type": "string"},
						"cut": {"type": "number"}
					},
					"required": ["ftp", "cut"]
				},
				"modernizr": {
					"type": "array",
					"items": {
						"type": "string"
					}
		        },
				"logo1": {
					"$ref": "logo.json#/definitions/logo"
				},
				"logo2": {
					"$ref": "logo.json#/definitions/logo"
				},
				"logo3": {
					"$ref": "logo.json#/definitions/logo"
				},
				"footer": {"type": "string"},
				"logoAlign": {"type": "string"},
				"logoOffset": {"type": "string"},
				"controls": {"type": "boolean"}
				
            },
            "required": ["title", "googleTrackingID", "external", "internal", "autoEmail", "autoPackage", "local", "content", "modernizr", "logo1", "logo2", "logo3", "footer", "logoAlign", "logoOffset", "controls"]
		}
	}
}