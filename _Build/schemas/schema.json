{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": false,
	"required": ["attributes"],
	"properties": {
		"attributes": {
			"description": "Generally toggles and settings that effect the build rather than the content",
			"type": "object",
            "properties": {
	            "internal": {
		        	"$ref": "_Build/schemas/deploy.json#/definitions/deploy"
				},
				"local": {
		        	"$ref": "_Build/schemas/deploy.json#/definitions/deploy"
				},
				"gymDefaults": {
	            	"type": "object",
	            	"properties": {
	            		"sets": {
			            	"type": "number"
			            },
			            "reps": {
			            	"type": "number"
			            },
			            "peak": {
			            	"type": "number"
			            },
			            "increase": {
			            	"type": "number"
			            },
			            "startPercent": {
			            	"type": "number"
			            },
			            "endPercent": {
			            	"type": "number"
			            },
			            "incInterval": {
			            	"type": "number"
			            },
			            "equipmentWeight": {
			            	"type": "number"
			            }
	            	}
		        }
            },
            "required": ["internal", "local", "gymDefaults"]
		},
		"index": {
			"type": "object",
			"properties": {	
				"charts": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"altName": {
								"type": "string"
							}
						}
					}
				},
				"callouts": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"sideCallouts": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"text": {
								"type": "string"
							},
							"key": {
								"type": "string"
							},
							"classes": {
								"type": "string"
							},
							"charts": {
								"type": "array",
								"items": {
									"type": ["object", "array"],
									"items": {
										"type": "object",
										"properties": {
											"group": {
												"type": "string"
											},
											"exercise": {
												"type": "string"
											}
										}
									},
									"properties": {
										"group": {
											"type": "string"
										},
										"exercise": {
											"type": "string"
										}
									}
								}
							}
						},
						"required": ["text", "key", "charts"]
					}
				}
			}
		},
		"global": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"title": {
		        	"type": "string"
	            },
	            "loading": {
		        	"type": "string"
	            },
	            "navigation": {
	            	"$ref": "_Build/schemas/navigation.json#/definitions/navigation"
	            },
	            "social": {
	            	"$ref": "_Build/schemas/navigation.json#/definitions/navigation"
	            }
			},
			"required": ["title", "navigation"]
		}
	}
}