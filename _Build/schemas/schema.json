{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": false,
	"required": ["attributes"],
	"properties": {
		"attributes": {
			"description": "Generally toggles and settings that effect the build rather than the content",
			"type": "object",
            "properties": {
	            "internal": {
		        	"$ref": "_Build/schemas/deploy.json#/definitions/deploy"
				},
				"local": {
		        	"$ref": "_Build/schemas/deploy.json#/definitions/deploy"
				}
            },
            "required": ["internal", "local"]
		},
		"content": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"url": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"charts": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		},
		"global": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"title": {
		        	"type": "string"
	            }
			},
			"required": ["title"]
		}
	}
}