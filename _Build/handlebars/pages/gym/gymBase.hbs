{{> header header--text=(findObjectInArray object="gym" in=@root.global.navigation key="url" getValue="name")}}

<div class="innerContainer ut-padding">
	<select class="half last js-chartSelect">
		{{#each index.charts}}
			<option>{{name}}</option>
		{{/each}}
	</select>

	<div class="delta">
		<svg class="chart"></svg>
	</div>
</div>

<script type="text/javascript">
	function pageJS(){
		chartManager.init();
        chartManager.update();
        
		document.querySelector('.js-chartSelect').onchange = function(){
	    	chartManager.chartIndex = this.selectedIndex;
	    	chartManager.update();
	    };
	}
</script>